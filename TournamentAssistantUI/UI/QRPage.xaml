<Page x:Class="TournamentAssistantUI.UI.QRPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TournamentAssistantUI.UI"
      mc:Ignorable="d" 
      d:DesignHeight="670" d:DesignWidth="870"
      Title="QR Test"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <TextBox x:Name="GenerateTextBox" HorizontalAlignment="Left" Height="23" Margin="10,15,0,0" TextWrapping="Wrap" Text="tournamentassistant.net:2052" VerticalAlignment="Top" Width="309"/>
        <Button x:Name="ConnectButton" Content="Generate QR" HorizontalAlignment="Left" Margin="324,6,0,0" VerticalAlignment="Top" Width="176" Click="Generate_Click"/>
        <Image x:Name="QRImage" HorizontalAlignment="Left" Height="617" Margin="10,43,0,0" VerticalAlignment="Top" Width="850"/>
    </Grid>
</Page>
