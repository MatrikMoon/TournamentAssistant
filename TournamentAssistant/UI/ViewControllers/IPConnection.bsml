<vertical xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://monkeymanboy.github.io/BSML-Docs/BSMLSchema.xsd'>
  <horizontal bg='panel-top' pad-left='10' pad-right='10' horizontal-fit='PreferredSize'>
    <text text='~direct-connect-text' align='Center' font-size='10'></text>
  </horizontal>
    <vertical background='round-rect-panel' id='Background'>
      <string-setting text='~ip-address-domain-name-text' value='ip' apply-on-change='true' align='Center'></string-setting>
      <string-setting text='~port-text' value='port' apply-on-change='true' align='Center'></string-setting>
    </vertical>
  <button on-click='ipConnect' text='~connect-text' hover-hint='~connect-hint-text'></button>
</vertical>