<!-- Adapted from BSN's (Auros's) Seeder plugin -->
<bg horizontal-fit="PreferredSize" vertical-fit="PreferredSize" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://monkeymanboy.github.io/BSML-Docs/ https://monkeymanboy.github.io/BSML-Docs/BSMLSchema.xsd">
  <vertical horizontal-fit="PreferredSize" vertical-fit="PreferredSize" spacing="2">
    <horizontal horizontal-fit="PreferredSize" vertical-fit="PreferredSize" bg="round-rect-panel" bg-color="fuchsia" pref-width="100" pref-height="10">
      <text text="~leaderboard-text" align="Center" font-size="8" />
    </horizontal>
    <vertical horizontal-fit="PreferredSize" vertical-fit="PreferredSize" pref-width="90" pref-height="70">
      <leaderboard id="leaderboard" cell-size="5.99" />
    </vertical>
  </vertical>
</bg>