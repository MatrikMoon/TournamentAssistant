<vertical child-control-height='false'
          xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
          xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://monkeymanboy.github.io/BSML-Docs/BSMLSchema.xsd'>
  <horizontal bg='panel-top' pad-left='10' pad-right='10' horizontal-fit='PreferredSize'>
    <text id='title-text' text='~title-text-string' align='Center' font-size='10'></text>
  </horizontal>
  <horizontal bg='round-rect-panel' id='splash-background' pad='8'>
    <text id='status-text' text='~status-text-string'></text>
  </horizontal>
</vertical>